<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/mainLayout"
    style="@style/mainLayout"
    tools:context=".MainActivity">

    <ImageView
        android:id="@id/mainImgLogo"
        style="@style/mainImgLogo" />

    <TextView
        android:id="@id/mainBusinessDescriptionText"
        style="@style/mainBusinessDescriptionText" />

    <TextView
        android:id="@id/mainCompanyText"
        style="@style/mainCompanyText" />

    <LinearLayout
        android:id="@id/mainHorizontalLayout"
        style="@style/mainHorizontalLayout">

        <ImageView
            android:id="@id/mainFacebookIcon"
            style="@style/mainFacebookIcon" />

        <TextView
            android:id="@id/mainFacebookText"
            style="@style/mainFacebookText"
            android:onClick="onLinkClick"
            android:tag="http://www.facebook.com/GreenBirdCreations" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/mainHorizontalLayout"
        style="@style/mainHorizontalLayout">

        <ImageView
            android:id="@id/mainMessengerIcon"
            style="@style/mainMessengerIcon" />

        <TextView
            android:id="@id/mainMessengerText"
            style="@style/mainMessengerText"
            android:onClick="onMessengerClick"
            android:tag="fb-messenger://user/" />

    </LinearLayout>

    <FrameLayout
        android:id="@id/mainFrameSlider"
        style="@style/mainFrameSlider">

        <android.support.v4.view.ViewPager
            android:id="@id/mainImgSlider"
            style="@style/mainImgSlider" />

        <ImageButton
            android:id="@id/mainSliderRightArrow"
            style="@style/mainSliderRightArrow"
            android:onClick="ArrowClick"
            android:tag="ViewPager.FOCUS_RIGHT" />

        <ImageButton
            android:id="@id/mainSliderLeftArrow"
            style="@style/mainSliderLeftArrow"
            android:onClick="ArrowClick"
            android:tag="ViewPager.FOCUS_LEFT" />


    </FrameLayout>


</LinearLayout>
