<resources>
    <!-- Set the primary layout for the app -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- Main Layout | id mainLayout -->
    <style name="mainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/mainBackgroundColor</item>
    </style>

    <!-- Main Image Logo ImageView | id mainImgLogo -->
    <style name="mainImgLogo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/mainLayoutHeight</item>
        <item name="android:layout_weight">@dimen/mainLayoutWeightLogo</item>
        <item name="android:src">@drawable/greenbirdlogo</item>
        <item name="android:layout_marginTop">@dimen/mainLayoutMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/mainLayoutMarginBottom</item>

    </style>

    <!-- Main Business Description Text TextView | id mainBusinessDescriptionText -->
    <style name="mainBusinessDescriptionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/mainLayoutHeight</item>
        <item name="android:layout_weight">@dimen/mainLayoutWeight</item>
        <item name="android:background">@color/mainBusinessDescriptionTextBG</item>
        <item name="android:text">@string/mainBusinessDescription</item>
        <item name="android:fontFamily">@font/eraslght</item>
        <item name="android:textSize">@dimen/mainBusinessDescriptionSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mainBusinessDescriptionText</item>
    </style>

    <!-- Main Company Name: Green Bird TextView | id mainCompanyText -->
    <style name="mainCompanyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/mainCompanyNameTextHeight</item>
        <item name="android:layout_weight">@dimen/mainLayoutWeight</item>
        <item name="android:text">@string/mainCompanyNameText</item>
        <item name="android:fontFamily">@font/eraslght</item>
        <item name="android:textSize">@dimen/mainCompanyNameText</item>
        <item name="android:textColor">@color/mainCompanyNameText</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/mainCompanyNameTextMargin</item>
    </style>

    <!-- Main Horizontal Layouts | id mainHorizontalLayout -->
    <style name="mainHorizontalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/mainHorizontalLayoutHeight</item>
        <item name="android:layout_weight">@dimen/mainLayoutWeight</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Main Facebook icon ImageView | id mainFacebookIcon -->
    <style name="mainFacebookIcon">
        <item name="android:layout_width">@dimen/mainImageViewsHeight</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/mainHorizontalIconPadding</item>
        <item name="android:layout_weight">@dimen/mainLayoutWeight</item>
        <item name="android:src">@drawable/facebookicon</item>
    </style>

    <!-- Main Messenger icon ImageView | id mainMessengerIcon -->
    <style name="mainMessengerIcon">
        <item name="android:layout_width">@dimen/mainImageViewsHeight</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/mainHorizontalIconPadding</item>
        <item name="android:layout_weight">@dimen/mainLayoutWeight</item>
        <item name="android:src">@drawable/messengericon</item>
    </style>

    <!-- Main Horizontal TextView | id mainFacebookText-->
    <style name="mainFacebookText">
        <item name="android:layout_width">@dimen/mainTextViewsHeight</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@dimen/mainLinksHorizontalWeight</item>
        <item name="android:text">@string/mainFacebookLink</item>
        <item name="android:fontFamily">@font/eraslght</item>
        <item name="android:textSize">@dimen/mainHorizontalLinkTextSize</item>
        <item name="android:textColor">@color/mainCompanyNameText</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Main Horizontal TextView  | id mainMessengerText-->
    <style name="mainMessengerText">
        <item name="android:layout_width">@dimen/mainTextViewsHeight</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@dimen/mainLinksHorizontalWeight</item>
        <item name="android:text">@string/mainMessengerLink</item>
        <item name="android:fontFamily">@font/eraslght</item>
        <item name="android:textSize">@dimen/mainHorizontalLinkTextSize</item>
        <item name="android:textColor">@color/mainCompanyNameText</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Main Image Slider ViewPager | id mainFrameSlider-->
    <style name="mainFrameSlider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/mainFrameSliderHeight</item>
        <item name="android:layout_weight">@dimen/mainLayoutWeightImages</item>
        <item name="android:paddingTop">@dimen/mainFrameSliderPadding</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Main Image Slider ViewPager | id mainImgSlider-->
    <style name="mainImgSlider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Main Image Slider Right Arrow | id mainSliderRightArrow-->
    <style name="mainSliderRightArrow">
        <item name="android:layout_width">@dimen/mainFrameSliderLayoutWidth</item>
        <item name="android:layout_height">@dimen/mainFrameSliderLayoutHeight</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_marginRight">@dimen/mainFrameSliderLayoutMargin</item>
        <item name="android:background">@color/mainSliderArrowBG</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/rightsliderarrow</item>
    </style>

    <!-- Main Image Slider Left Arrow | id mainSliderLeftArrow-->
    <style name="mainSliderLeftArrow">
        <item name="android:layout_width">@dimen/mainFrameSliderLayoutWidth</item>
        <item name="android:layout_height">@dimen/mainFrameSliderLayoutHeight</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">@dimen/mainFrameSliderLayoutMargin</item>
        <item name="android:background">@color/mainSliderArrowBG</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/leftsliderarrow</item>
    </style>


</resources>
